<style>
  .header {
    position: fixed;
    width: 100%;
    top: 0;
    left: 0;
    z-index: var(--z-fixed);
  }
  .navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px;
    background-color: #fff;
  }

  .menu {
    position: relative;
    height: var(--header-height);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .navigation {
    list-style: none;
    display: flex;
    margin: 0;
    padding: 0;
  }

  .navigation li {
    margin-right: 20px;
  }

  .navigation li:last-child {
    margin-right: 0;
  }

  .navigation a {
    text-decoration: none;
    color: #333;
    font-weight: bold;
  }

  .dropdown {
    position: relative;
  }

  .dropbtn {
    cursor: pointer;
  }

  .dropdown-content {
    display: none;
    position: absolute;
    background-color: #f9f9f9;
    min-width: 160px;
    box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
  }

  .dropdown:hover .dropdown-content {
    display: block;
  }

  .dropdown-content a {
    padding: 12px 16px;
    display: block;
    text-decoration: none;
    color: #333;
  }

  .dropdown-content a:hover {
    background-color: #ddd;
  }

  .right-content {
    display: flex;
    align-items: center;
    gap: 30px;
  }

  @media screen and (min-width: 768px) {
    .menu {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0;
    }

    .navigation li {
      margin-right: 30px;
    }
    .nav__toggle,
    .nav__close {
      display: none;
    }
  }

  @media screen and (max-width: 767px) {
    .menu {
      flex-direction: column;
      background-color: #fff;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      transform: translateX(-100%);
      transition: transform 0.3s ease-in-out;
    }

    .menu.active {
      transform: translateX(0);
    }

    .navigation {
      flex-direction: column;
      align-items: center;
    }

    .navigation li {
      margin-right: 0;
      margin-bottom: 15px;
    }

    .nav__toggle,
    .nav__close {
      display: inline-flex;
      font-size: 1.25rem;
      color: var(--text-color);
      cursor: pointer;
    }
  }
</style>

